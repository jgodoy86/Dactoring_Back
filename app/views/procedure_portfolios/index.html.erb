<p id="notice"><%= notice %></p>

<h1>Procedure Portfolios</h1>

<table>
  <thead>
    <tr>
      <th>Company code</th>
      <th>Code</th>
      <th>Procedure code</th>
      <th>Procedure cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @procedure_portfolios.each do |procedure_portfolio| %>
      <tr>
        <td><%= procedure_portfolio.company_code %></td>
        <td><%= procedure_portfolio.code %></td>
        <td><%= procedure_portfolio.procedure_code %></td>
        <td><%= procedure_portfolio.procedure_cost %></td>
        <td><%= link_to 'Show', procedure_portfolio %></td>
        <td><%= link_to 'Edit', edit_procedure_portfolio_path(procedure_portfolio) %></td>
        <td><%= link_to 'Destroy', procedure_portfolio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

